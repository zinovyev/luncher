%h1 Organizations

%table{class: 'table table-srtiped'}
  %thead
    %tr
      %th Name
      %th Created At
      %th{:colspan => "3"}
  %tbody
    - @organizations.each do |organization|
      %tr
        %td= organization.title
        %td= organization.created_at.strftime('%Y-%m-%d')
        %td= link_to 'Show', admin_organization_path(organization)
        %td= link_to 'Edit', edit_admin_organization_path(organization)
        %td= link_to 'Destroy', admin_organization_path(organization) , method: :delete, data: { confirm: 'Are you sure?' }
%br/

= link_to 'New Admin Organization', new_admin_organization_path, class: 'btn btn-default'
