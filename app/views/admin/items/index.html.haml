%p#notice= notice
%h1 Items

%br/
= link_to 'New Item', new_admin_item_path, class: 'btn btn-default'
%table{class: 'table'}
  %thead
    %tr
      %th Image
      %th Title 
      %th Course
      %th{:colspan => "3"}
  %tbody
    - @items.each do |item|
      %tr
        %td= image_tag(item.image_url, height: 150)
        %td= item.title
        %td= item.course
        -# %td= link_to 'Show', item
        %td= link_to 'Edit',
          edit_admin_item_path(item),
          class: 'btn btn-default btn-xs'
        %td= link_to 'Destroy',
          admin_item_path(item),
          method: :delete,
          data: { confirm: 'Are you sure?' },
          class: 'btn btn-danger btn-xs'

%br/
= will_paginate @items
