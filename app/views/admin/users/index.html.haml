%h1 Admin Users

%table{class: 'table table-striped'}
  %thead
    %tr
      %th Name
      %th Username
      %th Email
      %th Organization
      %th Approved
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.username
        %td= user.email
        %td= user.organization.title
        %td= user.approved?
        %td= link_to 'Show', admin_user_path(user), class: 'btn btn-default'
        %td= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-primary'
        %td= link_to 'Destroy',
          admin_user_path(user),
          method: :delete,
          data: { confirm: 'Are you sure?' },
          class: 'btn btn-danger'

= link_to 'New Admin User', new_admin_user_path
