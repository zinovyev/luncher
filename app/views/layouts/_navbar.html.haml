%nav{class: 'navbar navbar-default'}
  .container-fluid
    .navbar-header
      %a{class: 'navbar-brand', href: "#{root_path}"} Luncher
    .collapse{class: 'navbar-collapse'}
      - if lunches_admin?
        %ul{class: 'nav navbar-nav'}
          %li{class: 'dropdown'}
            %a{class: 'dropdown-toggle',
              'data-toggle': 'dropdown',
              role: 'button',
              'aria-haspopup': 'true',
              'aria-expanded': 'false'}
              Lunches Admin
              %span{class: 'caret'}
            %ul{class: 'dropdown-menu'}
              %li= link_to 'Items', items_path
              %li= link_to 'Menu', prices_path
              %li= link_to 'Orders', orders_path
      .navbar-text{class: 'navbar-right'}
        - if signed_in?
          Logged in as #{current_user.username}
          (#{ link_to 'log out', destroy_user_session_path, method: :delete })
          &nbsp;&nbsp;
